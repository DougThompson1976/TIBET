<package xmlns="http://www.technicalpursuit.com/1999/tibet"
    name="tibet_testing" default="base" basedir="~tibet_src/">

<config id="base" depends="">
    <config ref="harness"/>
    <config ref="assertions"/>
    <config ref="sinon"/>
</config>

<config id="harness">
    <script src="testing/TPTest.js" />
</config>

<config id="assertions">
    <script src="testing/TPTestAssertions.js" />
</config>

<config id="sinon" depends="">
    <script src="~lib_deps/sinon-tpi.js"/>

    <script>
        <![CDATA[
        TP.extern.sinon = sinon;
        ]]>
    </script>
</config>

<config id="samples">
    <script src="testing/TPTestSamples.js" />
</config>

<config id="tests">
    <config ref="driver"/>
    <config ref="tagprocessor"/>
    <config ref="databinding"/>
    <config ref="uri"/>
    <config ref="xslt"/>
</config>

<config id="driver">
    <script src="~lib_tst/src/tibet/driver/TP.gui.Driver_Tests.js" />
</config>

<config id="tagprocessor">
    <script src="~lib_tst/src/tibet/tagprocessor/TP.core.TagProcessor_Tests.js" />
</config>

<config id="databinding">
    <script src="~lib_tst/src/tibet/databinding/TP.core.DataPath_Tests.js" />
    <script src="~lib_tst/src/tibet/databinding/TP.core.DataObservation_Tests.js" />
</config>

<config id="xslt">
    <script src="~lib_tst/src/tibet/xslt/TP.core.XSLDocumentNode_Tests.js" />
</config>

<config id="uri">
    <script src="~lib_tst/src/tibet/uri/TP.core.URI_Tests.js" />
</config>

</package>

