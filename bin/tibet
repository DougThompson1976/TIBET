 */

var cli = require('../src/cli/cli.js');

var options = {};

//  Capture npm metadata about TIBET installation for downstream use.
require('child_process').exec('npm ll -g tibet --json',
    function(err, stdout, stderr) {
        if (err) {
            require('colors');
            console.log(('Unable to locate TIBET installation: ' + stderr).red);
            process.exit(1);
        }

        // Run the cli once we've found TIBET.
        options.meta = JSON.parse(stdout);
        cli.run(options);
    });

